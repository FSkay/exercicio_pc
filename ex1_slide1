#include <stdlib.h>
#include <stdio.h>
#include <locale.h>

int main(){
	setlocale (LC_ALL, "Portuguese");
	float C, K;
	printf("Digite uma temperatura em Celsus para ser convertida:\n");
	scanf("%f", &C);
	K=C+273.15;
	printf("A temperatura em Kelvin é, %.2f", K); //KelvinClain
	system("pause");
	return 0;
}
